@using WebApp.Models.Helpers;

@{
        Layout = "~/Views/Shared/_Layout.cshtml";
       
}


<div class="card border-secondary" style="margin-top: 5px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8"><h3>Registro de solicitud de trabajo</h3></div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vRegistrarSolicitudDeTrabajo", id: "btnCrear", label: "Registrar", onClickFunction:"Create", buttonType: "success")
            </div>
        </div>
    </div>

    <div class="card-body">

        <div class="row">
            <div class="col-lg-12">
                <div class="bs-component">
                    <form id="frmCrearSolicitud">
                        <div class="row">

                            <div class="col-md-6">
                                @Html.CtrlInputCptchaModelCtrl(id: "txtNombreContacto", type: "text", label: "Nombre del contacto", columnDataName: "NombreContacto", 
                               ariaDescribedby: "nombreContacto", idSmall: "nombreContacto", textSmall: "Este campo es requerido.", textSpan: "")

                                @*@Html.CtrlInputRequeridedModel(id: "txtNombreContacto", type: "text", label: "Nombre del contacto", columnDataName: "NombreContacto",
                                ariaDescribedby: "nombreContacto", idSmall: "nombreContacto")*@
                                @Html.CtrlInputRequeridedModel(id: "txtTelefono", type: "phone", label: "Teléfono de contacto",
                               columnDataName: "TelefonoContacto", ariaDescribedby: "valTel", idSmall: "valTel", pattern: @"[0-9]{8,}")
                                @Html.CtrlInputMonedaNoRequeridoModel(id: "txtPresupuesto", type: "text", label: "Presupuesto",
                               columnDataName: "Presupuesto", pattern: @"^\$\d{1,3}(,\d{3})*(\.\d+)?$", min: "0", name: "currency-field", dataType: "currency")
                                @Html.CtrlInputRequeridedModel(id: "txtFecEvento", type: "date", label: "Fecha del trabajo", columnDataName: "FechaEvento", ariaDescribedby: "valDate", idSmall: "valDate")
                                @Html.CtrlMultipleSelect(id: "selTiposTrabajo", label: "Tipos de trabajo", listId: "TiposTrabajo", columnDataName: "TiposDeTrabajo",
                               ariaDescribeby: "selTiposT", idSmall: "selTiposT")
                                @Html.CtrlListModel(id: "sltLocalizaciones", label: "Localización", columnDataName: "IdLocalizacion", ariaDescribeby: "sltLoca", idSmall: "sltLoca")
                                <label for="C">Fotos</label>
                                <div class="custom-file" id="F">
                                    <input type="file" id="F1" class="custom-file-input" lang="es" required>
                                    <label id="foto1" class="custom-file-label" for="curriculum">Seleccionar archivo</label>
                                </div>
                                <div class="custom-file" id="F2">
                                    <input type="file" id="F2" class="custom-file-input" lang="es" required>
                                    <label id="foto2" class="custom-file-label" for="curriculum">Seleccionar archivo</label>
                                </div>
                                <div class="custom-file" id="F3">
                                    <input type="file" id="F3" class="custom-file-input" lang="es" required>
                                    <label id="foto3" class="custom-file-label" for="curriculum">Seleccionar archivo</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @Html.CtrlTextArea(id: "txtADescripcionNecesidad", label: "Descripción de la necesidad", columnDataName: "DescripcionNecesidad",
                              isRequired: true, ariaDescribedby: "descNecesidad", idSmall: "descNecesidad", maxlength: "200")
                                @Html.CtrlTextArea(id: "txtAExplicacionTrabajo", label: "Explicación del trabajo", columnDataName: "ExplicacionTrabajo",
                     isRequired: true, ariaDescribedby: "expTrabajo", idSmall: "expTrabajo", maxlength: "200")                         
                       
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>


        

    </div>


</div>

<script src="~/Scripts/Views/vRegistrarSolicitudDeTrabajo.js"></script>