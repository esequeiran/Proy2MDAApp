    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <link href="@Url.Content("~/Content/Views/")cardsLogins.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/Views/")vLogin.css" rel="stylesheet" type="text/css">
}


<div class="row">
    <div class="col-12 col-sm-8 col-md-4 offset-sm-2 offset-md-4">
        <div class="card my-sm-0">
            <div class="card-header text-center">
                <h4 class="card-title my-0">Modificar contraseña</h4>
            </div>
            <div class="card-body pb-1">
                <form id="frmModificarContrasenna">
                    @Html.CtrlInput(id: "txtContrasennaActual", type: "password", label: "Contraseña actual", placeHolder: "contraseña actual", columnDataName: "ContrasennaActual", IsRequired: "required")
                    <small id="pwHelp" class="form-text text-muted sPw">
                        Campo requerido
                    </small>
                    @Html.CtrlInput(id: "txtContrasenna", type: "password", label: "Nueva contraseña", placeHolder: "nueva contraseña", columnDataName: "Contrasenna", IsRequired: "required")
                    <small id="pwHelp" class="form-text text-muted sPw">
                        Campo requerido
                    </small>

                    @Html.CtrlInput(id: "txtConfirmarContrasenna", type: "password", label: "Confirmar nueva contraseña", placeHolder: "confirmar contraseña", columnDataName: "ConfirmarContrasenna", IsRequired: "required")
                    <small id="pwHelp" class="form-text text-muted sPw">
                        Campo requerido
                    </small>
                </form>
                <div class="form-group row">
                    <div class="text-center col-12 col-lg-8 offset-lg-4">
                        @Html.CtrlButton(viewName: "vModificarContrasenna", id: "btnModificarContrasenna", label: "Guardar", onClickFunction: "ModificarContrasenna", buttonType: "primary")
                        @*@Html.CtrlButton(viewName: "vLogin", id: "btnIniciarSesion", label: "Iniciar sesión", onClickFunction: "InicioSesion", buttonType: "primary", dataToggle: "", dataTarget: "", customClass: "btn-block fadeIn first")*@
                    </div>
                </div>
            </div>
            @*<div class="card-footer pt-0 text-center">
                <div class="m-0 p-0 d-inline-flex">
                    <p class="col-6 m-0 p-0">
                        @Html.ActionLink("¿Ha olvidado la contraseña?", "vRecuperarContrasenna", "Home", new { @class = "nav-link p-0" })
