@using WebApp.Models.Helpers;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8"><h5>Perfil cliente</h5></div>
            <div class="col-md-4">
                
            </div>
        </div>
    </div>
    <div class="card-body" id="FormularioCliente">
        <form autocomplete="off" id="frmView">
            <div class="row">
                <div class="col-md-6">
                    @Html.CtrlInput(id: "selectTipoId" , type: "text" , label: "Tipo de identificación: " , columnDataName: "TipoIdentificacion" )
                    @Html.CtrlInput(id: "txtId" , type: "text" , label: "Número de identificación: " , columnDataName: "Identificacion" )
                    @Html.CtrlInput(id: "txtNombre" , type: "text" , label: "Nombre: " , columnDataName: "Nombre" )
                    @Html.CtrlInput(id: "txtApellidoUno" , type: "text" , label: "Primer apellido: " , columnDataName: "ApellidoUno" )
                    @Html.CtrlInput(id: "txtApellidoDos" , type: "text" , label: "Segundo apellido: " , columnDataName: "ApellidoDos")
                </div>
                <div class="col-md-6">
                    @Html.CtrlInput(id: "txtFechaNacimiento" , type: "date" , label: "Fecha de nacimiento: " , columnDataName: "FechaNacimiento" )
                    @Html.CtrlInput(id: "selectPais" , type: "text" ,label: "País de nacimiento" , columnDataName: "PaisNacimiento" )
                    @Html.CtrlInput(id: "selectGenero" , type: "text" ,label: "Género: " , columnDataName: "Genero" )
                    @Html.CtrlInput(id: "txtTelefono" , type: "phone" , label: "Teléfono: " , columnDataName: "Telefono")
                    @Html.CtrlInput(id: "txtCorreo" , type: "email" , label: "Correo electrónico: " , columnDataName: "Correo")
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/Views/vPerfilClientevCliente.js"></script>
}
