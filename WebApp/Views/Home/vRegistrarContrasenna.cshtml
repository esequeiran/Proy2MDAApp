@using WebApp.Models.Helpers;
@{
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Content/Views/")cardsLogins.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/Views/")vLogin.css" rel="stylesheet" type="text/css">
}


<div class="row">

    <div class="col-md-5"></div>
    <div class="card mt-6" style="width: 18rem;">
        <div class="card-header"><h5 class="card-title text-center">Registrar contraseña</h5></div>
        <div class="card-block">
            <div class="card-text " style="font-size: large ; padding: 22px">
                <form id="frmRegistrarContrasenna">
                    @Html.CtrlInput(id: "txtContrasenna", type: "password", label: "Contraseña", placeHolder: "nueva contraseña", columnDataName: "Contrasenna", IsRequired: "required")
                    <small id="pwHelp" class="form-text text-muted sPw">
                        Campo requerido
                    </small>
                    @Html.CtrlInput(id: "txtConfirmarContrasenna", type: "password", label: "Confirmar contraseña", placeHolder: "confirmar contraseña", columnDataName: "ConfirmarContrasenna", IsRequired: "required")
                    <small id="pwHelp" class="form-text text-muted sPw">
                        Campo requerido
                    </small>
                </form>
            </div>

        </div>
        <div class="card-block text-center" style="padding: 22px">
            @Html.CtrlButton(viewName: "vRegistrarContrasenna", id: "btnGuardarContrasenna", label: "Guardar", onClickFunction: "GuardarContrasenna",
           buttonType: "btn")
        </div>
    </div>
    <div class="col-md-5"></div>


</div>

@Html.CtrlModalModel(idModal: "modalRegistrarContrasenna", title: "Registro de contraseña",
    idParrafo: "parrafoDialogRegistrarContrasenna", viewName: "vRegistrarContrasenna", id: "btnRegistroContrasenna", label: "Aceptar", onClickFunction: "AceptarRegistroContrasenna", buttonType: "info")


