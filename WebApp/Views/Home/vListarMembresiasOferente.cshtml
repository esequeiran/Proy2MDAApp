@using WebApp.Models.Helpers;

@{
    ViewBag.Title = "Membresías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/Content/Swal/sweetalert2-bootstrap-4.min.css">
}

@{
    //Nombre de las columnas en el mismo orden del javascript:
    var lstColumnas = new List<string>();

    lstColumnas.Add("Empresa");
    lstColumnas.Add("Membresía");
    lstColumnas.Add("Tipo de membresía");
    lstColumnas.Add("Precio");
    lstColumnas.Add("Vigencia(mm)");
    lstColumnas.Add("Cuota por reagendar");
    lstColumnas.Add("Cuota por cancelar");
    lstColumnas.Add("Cuota por trabajo realizado");
    lstColumnas.Add("Fecha");
    lstColumnas.Add("Estado");
}


<div class="card border-secondary mb-5">
    <div class="card-header">Lista de membresías</div>
    <div class="card-body">
        <div class="table-responsive mx-0 px-0">
            <table id="tblMembresias" class="table table-striped table-xxs" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        @foreach (var i in lstColumnas)
                        {
                            <th class="text-center">@i</th>
                        }
                        <th class="text-center">Cancelar membresía</th>
                    </tr>
                </thead>
                <!-- Este segundo <thead> es para la barra de búsqueda por columnas -->
                <thead id="theadBusqueda" class="d-none">
                    <tr id="trbusqueda">
                        @foreach (var i in lstColumnas)
                        {
                            <th></th>
                        }
                        <th class="descartar-celda"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var totalColumnas = lstColumnas.Count + 1;
                    }
                    <tr>
                        <td colspan="@totalColumnas" class="text-dark h6 text-center font-weight-normal">Cargando...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Swal/sweetalert2.min.js"></script>
    <script src="~/Scripts/Views/vListarMembresiasOferente.js"></script>
}

